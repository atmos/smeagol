PATH="<%= @root %>/bin:<%= @root %>/Cellar/python/2.7.1/bin:<%= @root %>/share/python:<%= @root %>/sbin:$PATH"; export PATH
PATH="<%= @root %>/.rbenv/bin:$PATH"; export PATH
MANPATH="<%= @root %>/share/man:$MANPATH"; export MANPATH
CFLAGS="-I<%= @root %>/include"; export CFLAGS
CPPFLAGS="-I<%= @root %>/include"; export CPPFLAGS
CXXFLAGS="-I<%= @root %>/include"; export CXXFLAGS
LDFLAGS="-L<%= @root %>/lib"; export LDFLAGS
HOMEBREW_TEMP="<%= @root %>/tmp"; export HOMEBREW_TEMP

export CONFIGURE_ARGS="--with-cflags='$CFLAGS' --with-ldflags='$LDFLAGS'"

if [[ -s <%= @root %>/.rvm/scripts/rvm ]] ; then
  source <%= @root %>/.rvm/scripts/rvm
fi

if [[ -d <%= @root %>/Cellar/python/2.7/bin ]]; then
  export PATH=~/Developer/Cellar/python/2.7/bin:$PATH
fi

if [[ -f <%= @root %>/.nvm/nvm.sh ]]; then
  source <%= @root %>/.nvm/nvm.sh
fi

if [[ -x <%= @root %>/.rbenv/bin/rbenv ]]; then
  eval "$(rbenv init -)"
fi

if [[ -f <%= @home %>/.cinderella.profile.custom ]]; then
  source ~/.cinderella.profile.custom
fi

if [ -f `brew --prefix`/etc/bash_completion ]; then
  . `brew --prefix`/etc/bash_completion
fi
